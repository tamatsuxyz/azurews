{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "applicationGatewayName": {
      "type": "string"
    },
    "skuSize": {
      "type": "string"
    },
    "privateIpAddress": {
      "type": "string"
    },
    "subnetRef": {
      "type": "String"
    },
    "zones": {
      "type": "array"
    }
  },
  "variables": {
    "publicIPRef": "[resourceId('Microsoft.Network/publicIPAddresses/', variables('publicIpAddressName'))]",
    "applicationGatewayId": "[resourceId('Microsoft.Network/applicationGateways', parameters('applicationGatewayName'))]",
    "location": "[resourceGroup().location]",
    "publicIpAddressName": "[concat(parameters('applicationGatewayName'), '-ip')]",
    "publicIpZones": [],
    "allocationMethod": "Static",
    "autoScaleMaxCapacity": 2,
    "sku": "Standard",
    "tier": "[parameters('skuSize')]",
    "capacity": 0,
    "PublicFrontendIpName": "appGwPublicFrontendIp",
    "PrivateFrontendIpName": "appGwPrivateFrontendIp",
    "gatewayIPConfigurationsName": "appGatewayIpConfig",
    "sslPolicyName": "AppGwSslPolicy20170401S",
    "httpListner": [
      {
        "name": "httpVm",
        "properties": {
          "frontendIPConfiguration": {
            "id": "[concat(variables('applicationGatewayId'), '/frontendIPConfigurations/', variables('PublicFrontendIpName'))]"
          },
          "frontendPort": {
            "id": "[concat(variables('applicationGatewayId'), '/frontendPorts/port_80')]"
          },
          "protocol": "Http",
          "sslCertificate": null
        }
      }
    ]
  },
  "resources": [
    {
      "name": "[parameters('applicationGatewayName')]",
      "type": "Microsoft.Network/applicationGateways",
      "apiVersion": "2020-04-01",
      "location": "[variables('location')]",
      "zones": "[parameters('zones')]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', variables('publicIpAddressName'))]"
      ],
      "tags": {},
      "properties": {
        "sku": {
          "name": "[parameters('skuSize')]",
          "tier": "[variables('tier')]"
        },
        "gatewayIPConfigurations": [
          {
            "name": "[variables('gatewayIPConfigurationsName')]",
            "properties": {
              "subnet": {
                "id": "[parameters('subnetRef')]"
              }
            }
          }
        ],
        "frontendIPConfigurations": [
          {
            "name": "[variables('PublicFrontendIpName')]",
            "properties": {
              "PublicIPAddress": {
                "id": "[variables('publicIPRef')]"
              }
            }
          },
          {
            "name": "[variables('PrivateFrontendIpName')]",
            "properties": {
              "subnet": {
                "id": "[parameters('subnetRef')]"
              },
              "privateIPAddress": "[parameters('privateIpAddress')]",
              "privateIPAllocationMethod": "Static"
            }
          }
        ],
        "frontendPorts": [
          {
            "name": "port_80",
            "properties": {
              "Port": 80
            }
          },
          {
            "name": "port_443",
            "properties": {
              "port": 443
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "empty",
            "properties": {
              "backendAddresses": []
            }
          }
        ],
        "backendHttpSettingsCollection": [
          {
            "name": "http",
            "properties": {
              "Port": 80,
              "Protocol": "Http",
              "cookieBasedAffinity": "Disabled",
              "requestTimeout": 20
            }
          }
        ],
        "httpListeners": "[variables('httpListner')]",
        "requestRoutingRules": [
          {
            "Name": "httpVm",
            "properties": {
              "RuleType": "Basic",
              "httpListener": {
                "id": "[concat(variables('applicationGatewayId'), '/httpListeners/httpVm')]" //
              },
              "backendAddressPool": {
                "id": "[concat(variables('applicationGatewayId'), '/backendAddressPools/vm')]"
              },
              "backendHttpSettings": {
                "id": "[concat(variables('applicationGatewayId'), '/backendHttpSettingsCollection/', 'http')]"
              }
            }
          }
        ],
        "sslPolicy": {
          "policyType": "Predefined",
          "policyName": "[variables('sslPolicyName')]"
        },
        "enableHttp2": true,
        "probes": [
          {
            "name": "http",
            "properties": {
              "protocol": "Http",
              "path": "/",
              "interval": 30,
              "timeout": 30,
              "unhealthyThreshold": 3,
              "pickHostNameFromBackendHttpSettings": true,
              "minServers": 0,
              "match": {}
            }
          }
        ],
        "autoscaleConfiguration": {
          "minCapacity": "[variables('capacity')]",
          "maxCapacity": "[variables('autoScaleMaxCapacity')]"
        }
      }
    },
    {
      "apiVersion": "2020-04-01",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('publicIpAddressName')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "[variables('sku')]"
      },
      "zones": "[variables('publicIpZones')]",
      "properties": {
        "publicIPAllocationMethod": "[variables('allocationMethod')]"
      }
    }
  ]
}
